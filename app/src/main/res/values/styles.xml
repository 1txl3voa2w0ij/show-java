<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:typeface">sans</item>
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="colorPrimaryDark">@color/grey_black</item>
        <item name="colorAccent">@color/grey_dark</item>
    </style>
    <style name="SourceViewerTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@color/black</item>
    	<item name="android:colorBackground">@color/black</item>
        <item name="colorPrimary">@color/grey_black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/grey_black</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:typeface">sans</item>
    </style>

</resources>
