<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">sans</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
    </style>

    <style name="SourceViewerTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@color/black</item>
    	<item name="android:colorBackground">@color/black</item>
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/grey_900</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
    </style>

</resources>
