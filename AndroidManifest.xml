<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.njlabs.showjava"
    android:versionCode="2"
    android:versionName="1.2 (Beta)" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.njlabs.showjava.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        
	<activity android:name="com.google.ads.AdActivity"
		android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>        
		
	<activity
            android:name="com.njlabs.showjava.Landing"
            android:label="@string/title_activity_landing" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.njlabs.showjava.AppListing"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.njlabs.showjava.Landing" />
        </activity>
        <activity
            android:name="com.njlabs.showjava.AppProcessActivity"
            android:label="@string/title_activity_app_process"
            android:parentActivityName="com.njlabs.showjava.AppListing"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.njlabs.showjava.AppListing" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="file" />
                <data android:host="*" />
                <data android:mimeType="application/vnd.android.package-archive" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="file" />
                <data android:host="*" />
                <data android:mimeType="application/java-archive" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.njlabs.showjava.JavaExplorer"
            android:label="@string/title_activity_java_explorer" >
        </activity>
        <activity
            android:name="com.njlabs.showjava.SourceViewer"
            android:label="@string/title_activity_source_viewer"
            android:theme="@style/SourceViewerTheme" >
        </activity>
        <activity
            android:name="ru.bartwell.exfilepicker.ExFilePickerActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.njlabs.showjava.About"
            android:label="@string/title_activity_about" >
        </activity>
        
    </application>

</manifest>
